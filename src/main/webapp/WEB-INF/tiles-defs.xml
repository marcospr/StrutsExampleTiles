<!DOCTYPE tiles-definitions PUBLIC
"-//Apache Software Foundation//DTD Tiles Configuration 1.3//EN"
"http://struts.apache.org/dtds/tiles-config_1_3.dtd">
<tiles-definitions>

	<definition name="company-template" path="/pages/tiles/common-layout.jsp">
		<!-- a ordem dos atributos de região de tela não importa  -->
		<!-- aqui eu digo a JSP que vai em cada atributo definido no template -->
		<put name="footer" value="/pages/tiles/template-red/footer.jsp" />
		<put name="header" value="/pages/tiles/template-red/header.jsp" />
		
		<!-- o name="body" será definido nos diversos jsp's diferentes que existirem  -->
	</definition> 
	
	<!-- Podemos ter varias definições -->
	<definition name="company-template2" path="/pages/tiles/common-layout.jsp">
		<put name="footer" value="/pages/tiles/template-green/footer.jsp" />
		<put name="header" value="/pages/tiles/template-green/header.jsp" />
	</definition>
	
	<!-- Outra definição -->
	<definition name="company-template3" path="/pages/tiles/common-layout2.jsp">
		<put name="footer" value="/pages/tiles/template-marco/footer.jsp" />
		<put name="header" value="/pages/tiles/template-marco/header.jsp" />
	</definition>

</tiles-definitions>